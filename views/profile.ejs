<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oleo+Script+Swash+Caps&family=Roboto:wght@300&display=swap"
      rel="stylesheet"
    />

    <!-- fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- custom css -->
    <link rel="stylesheet" href="/css/profile.css" />
    <title>Profile</title>
  </head>
  <body>
    <%if(authUser){%> <%-include('../views/partials/privateNAVbar.ejs') %>
    <%}else{%> <%-include('../views/partials/publicNAVbar.ejs') %> <%} %>

    <!-- end navbar -->

    <!-- header -->

    <div class="header-wrapper">
      <div class="header-content">
        <h1>Welcome:<%=singleuser.fullname%></h1>
        <h2>Its nice to see you.</h2>

        <button class="add-btn">Add New Book</button>
      </div>

      <!-- svg -->
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
        <path
          fill="#0099ff"
          fill-opacity="1"
          d="M0,288L288,320L576,160L864,192L1152,96L1440,160L1440,320L1152,320L864,320L576,320L288,320L0,320Z"
        ></path>
      </svg>
    </div>

    <!--end header -->

    <div class="home-heading-title">
      <h1>Latest Books created total: <%=singleuser.books.length%></h1>
    </div>

    <!-- card container -->
    <div class="card-container">
      <!-- card 1 -->
      <%singleuser.books.forEach((book)=>{%>
      <div class="card-item-wrapper">
        <!-- category -->
        <div class="card-category">
          <div class="dot"></div>
          <div><%=book.author%></div>
        </div>
        <!-- card content -->
        <div class="card-content-wrapper">
          <h2 class="title"><%=book.title%></h2>
          <p class="description"><%=book.desc%></p>
          <!-- user -->
          <div class="user">
            <p><%=book.category%></p>
            <p>Like</p>
          </div>
        </div>
        <!-- card footer -->
        <div class="card-item-footer">
          <button class="edit">
            <a href="#">
              <i class="fa-solid fa-pen-to-square"></i>
            </a>
          </button>
          <button class="delete">
            <a href="#"> <i class="fa-solid fa-trash"></i> </a>
          </button>
        </div>
      </div>
      <%})%>
    </div>
    <!-- card container ends -->

    <!-- bootstrap js -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
