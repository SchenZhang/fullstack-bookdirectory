<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oleo+Script+Swash+Caps&family=Roboto:wght@300&display=swap"
      rel="stylesheet"
    />

    <!-- fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- custom css -->
    <link rel="stylesheet" href="/css/main.css" />
    <title>Book App</title>
  </head>
  <body>
    <%if(authUser){%> <%-include('../views/partials/privateNAVbar.ejs') %>
    <%}else{%> <%-include('../views/partials/publicNAVbar.ejs') %> <%} %>

    <!-- end navbar -->

    <!-- header -->

    <div class="header-wrapper">
      <div class="header-content">
        <h1>Books Catalogue</h1>
        <h2>Keep your books at one single place</h2>
        <p>This is a fullstack web project.</p>
        <button class="add-btn">Try For Free</button>
      </div>

      <!-- svg -->
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
        <path
          fill="#ffffff"
          fill-opacity="1"
          d="M0,256L80,224C160,192,320,128,480,117.3C640,107,800,149,960,170.7C1120,192,1280,192,1360,192L1440,192L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"
        ></path>
      </svg>
    </div>

    <!--end header -->

    <div class="home-heading-title">
      <h1>Latest Books created</h1>
    </div>

    <!-- card container -->
    <div class="card-container">
      <%if(books.length===0){%>
      <h2>There is None</h2>
      <%}else{%> <%books.forEach((book)=>{%>
      <div class="card-item-wrapper">
        <!-- category -->
        <div class="card-category">
          <div class="dot"></div>
          <div class="catalogue"><%=book.category%></div>
        </div>
        <!-- card content -->
        <div class="card-content-wrapper">
          <h2 class="title"><%=book.title%></h2>
          <p class="description"><%=book.desc%></p>
          <!-- user -->
          <div class="user">
            <p><%=book.author%></p>
            <p><%=book.createdAt%></p>
          </div>
        </div>
        <!-- card footer -->
        <div class="card-item-footer">
           <a href="/api/books/<%=book.id%>">
          <button class="edit">
           
              <i class="fa-solid fa-pen-to-square"></i>
            </a>
          </button>
          <a href="/api/books/delete/<%=book._id%>">
            <button class="delete">
              <i class="fa-solid fa-trash"></i></button>
          </a>
        </div>
      </div>
      <%})%> <%}%>
      <!-- card 1 -->
    </div>
    <!-- card container ends -->

    <!-- bootstrap js -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
